apiVersion: argoproj.io/v1alpha1
kind: ApplicationSet
metadata:
  name: {{ ocp4_workload_connectivity_link_sail_operator_applicationset_name }}
  namespace: {{ ocp4_workload_connectivity_link_argocd_namespace }}
spec:
  generators:
    - list:
        elements:
          - cluster: {{ ocp4_workload_connectivity_link_argocd_local_cluster }}
            url: {{ r_openshift_api_server }}
  template:
    metadata:
      annotations:
        argocd.argoproj.io/sync-options: PruneLast=true
      name: {{ ocp4_workload_connectivity_link_sail_operator_application_name }}
      namespace: {{ ocp4_workload_connectivity_link_argocd_namespace }}
    spec:
      destination:
        server: '{% raw %}{{ url }}{% endraw %}'
        namespace: {{ ocp4_workload_connectivity_link_sail_operator_application_namespace }}
      project: {{ ocp4_workload_connectivity_link_gitops_infra_project }}
      syncPolicy:
        automated:
          prune: true
          selfHeal: true
        syncOptions:
          - ApplyOutOfSyncOnly=true
          - CreateNamespace=true
      source:
        repoURL: {{ ocp4_workload_connectivity_link_sail_operator_gitops_repo }}
        targetRevision: {{ ocp4_workload_connectivity_link_sail_operator_gitops_repo_tag }}
        path: {{ ocp4_workload_connectivity_link_sail_operator_gitops_repo_path }}
        helm:
          values: |
            subscription:
              channel: {{ ocp4_workload_connectivity_link_sail_operator_operator_channel }}
              installPlanApproval: {{ ocp4_workload_connectivity_link_sail_operator_operator_install_plan_approval }}
              name: {{ ocp4_workload_connectivity_link_sail_operator_operator_name }}
              source: {{ ocp4_workload_connectivity_link_sail_operator_catalogsource }}
              sourceNamespace: {{ ocp4_workload_connectivity_link_sail_operator_catalogsource_namespace }}
              startingCSV: {{ ocp4_workload_connectivity_link_sail_operator_operator_starting_csv }}
